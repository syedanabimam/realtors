<div class="form-wrapper">
  <%= simple_form_for @post, html: { class: 'form-horizontal', multipart: true } do |f| %>

    <div class="form-group text-center">
      <%= f.input :customer_name %>
    </div>
    <div class="form-group text-center">
      <%= f.input :customer_email %>
    </div>
    <div class="form-group text-center">
      <%= f.input :customer_phone_no %>
    </div>
    <div class="form-group">
      <%= f.input :image %>
    </div>
    
    <div class="form-group text-center">
      <%= f.input :house_name %>
    </div>
    <div class="form-group text-center">
      <%= f.input :house_address %>
    </div>
    <div class="form-group text-center">
      <%= f.input :description %>
    </div>
    <div class="form-group text-center">
      <%= f.collection_radio_buttons :post_type_select, [['Rent', 'Rent'] ,['Sell', 'Sell']],:first, :last %>
    </div>
    
    
    <div class="form-group text-center">
      <%= f.button :submit, class: 'btn-success' %>
    </div>
  <% end %>
</div>