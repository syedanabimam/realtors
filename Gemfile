source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.0'

# Use sqlite3 as the database for Active Record
#gem 'sqlite3'
gem 'mysql2', '0.3.18'

# Use SCSS for stylesheets
gem 'sass-rails', '4.0.3'

# use Bootstrap Lib for Style
gem 'bootstrap-sass', '3.3.1'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer',  platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
#gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'

# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0',          group: :doc

# Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
gem 'spring',        group: :development

#-------------------------GEMS UTILIZED FOR THIS PROJECT------------------------

# Rspec gem has been used in combination with capybara and factory girl to design
# this project in BDD
group :development, :test do
  gem 'rspec-rails', '3.0.1'
  #gem 'railroady'
end

# This gem is helpful in simulating how real world user will interact with website
gem 'capybara'

# This gem assists in testing the model/active record objects behavior
gem 'factory_girl_rails', '4.0'

# Simple Form provides a flexible way of creating forms
gem 'simple_form'

# This gem has been used for the usage of Image
gem 'paperclip', '4.3'

# This gem provides the pagination functionality
gem 'kaminari', '0.16.3' 

# This gem helps in generating PDF docs
gem 'prawn'

# This gem helps in creating the table for the prawn gem
gem 'prawn-table'

# This gem provides an easy way of integrating google maps with web app
gem 'geocoder'

# This gem has very helpful helper methods to make the google maps integration 
# more customizable
gem 'gmaps4rails'

gem 'yaml_db'

